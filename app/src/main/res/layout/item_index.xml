<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/item_index_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/item_index_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/item_index_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_index_origin"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_index_super_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_index_title"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:id="@+id/item_index_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_index_title"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@drawable/collect_default"
        android:visibility="gone"/>
</RelativeLayout>

